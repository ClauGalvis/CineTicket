<configuration>

    <!-- Carpeta donde se guardarán los logs -->
    <property name="LOG_DIR" value="logs"/>

    <!-- Appender a consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender a archivo con rotación diaria -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/cineticket.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Un archivo por día -->
            <fileNamePattern>${LOG_DIR}/cineticket.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Mantener 15 días -->
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nivel global de la app -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Servicios de negocio (AuthService, CompraService, ReservaService, etc.) -->
    <logger name="com.cineticket.servicio" level="DEBUG" />


</configuration>
