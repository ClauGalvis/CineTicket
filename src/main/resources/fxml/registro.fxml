<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cineticket.controlador.RegistroController"
           fx:id="rootPane"
           stylesheets="@../css/styles.css">

    <children>

        <!-- Fondo -->
        <ImageView fx:id="imgBackground"
                   preserveRatio="false">
            <image>
                <Image url="@../img/login_background.jpg" />
            </image>
        </ImageView>

        <!-- Contenedor central -->
        <VBox alignment="CENTER">
            <children>

                <!-- Tarjeta -->
                <VBox maxWidth="500"
                      spacing="24"
                      alignment="CENTER"
                      styleClass="login-card">
                    <padding>
                        <Insets top="32" right="40" bottom="32" left="40"/>
                    </padding>

                    <!-- Logo -->
                    <ImageView fx:id="imgLogo"
                               fitHeight="40"
                               preserveRatio="true">
                        <image>
                            <Image url="@../img/logo_cinetick.png" />
                        </image>
                    </ImageView>

                    <!-- Encabezado -->
                    <VBox alignment="CENTER" spacing="4">
                        <Label text="Crear cuenta" styleClass="login-title-main"/>
                        <Label text="Completa los datos para registrarte en CineTick."
                               styleClass="login-subtitle-main"
                               wrapText="true"/>
                    </VBox>

                    <!-- Formulario -->
                    <VBox spacing="14" fillWidth="true">

                        <VBox spacing="6">
                            <Label text="Nombre completo" styleClass="login-label"/>
                            <TextField fx:id="txtNombreCompleto"
                                       promptText="Tu nombre completo"
                                       maxWidth="Infinity"
                                       styleClass="login-input"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Correo electrónico" styleClass="login-label"/>
                            <TextField fx:id="txtCorreo"
                                       promptText="Tu correo"
                                       maxWidth="Infinity"
                                       styleClass="login-input"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Usuario" styleClass="login-label"/>
                            <TextField fx:id="txtUsuario"
                                       promptText="Nombre de usuario"
                                       maxWidth="Infinity"
                                       styleClass="login-input"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Contraseña" styleClass="login-label"/>
                            <PasswordField fx:id="txtContrasena"
                                           promptText="••••••••"
                                           maxWidth="Infinity"
                                           styleClass="login-input"/>
                        </VBox>

                        <!-- Mensaje de error -->
                        <Label fx:id="lblMensaje"
                               text=""
                               visible="false"
                               managed="false"
                               wrapText="true"
                               styleClass="login-error"/>

                        <!-- Botón principal -->
                        <Button text="Crear cuenta"
                                maxWidth="Infinity"
                                styleClass="login-button"
                                onAction="#registrar"/>

                        <!-- Volver a login -->
                        <HBox alignment="CENTER" spacing="4">
                            <Label text="¿Ya tienes una cuenta?"/>
                            <Hyperlink text="Inicia sesión"
                                       onAction="#volverLogin"
                                       styleClass="login-link"/>
                        </HBox>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
