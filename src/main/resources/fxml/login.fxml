<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cineticket.controlador.LoginController"
           fx:id="rootPane"
           stylesheets="@../css/styles.css">

    <children>

        <!-- Fondo -->
        <ImageView fx:id="imgBackground"
                   preserveRatio="false">
            <image>
                <Image url="@../img/login_background.jpg" />
            </image>
        </ImageView>

        <!-- Contenedor central -->
        <VBox alignment="CENTER">
            <children>

                <!-- Tarjeta -->
                <VBox maxWidth="460"
                      spacing="24"
                      alignment="CENTER"
                      styleClass="login-card">
                    <padding>
                        <Insets top="32" right="40" bottom="32" left="40"/>
                    </padding>

                    <!-- Logo -->
                    <ImageView fx:id="imgLogo"
                               fitHeight="40"
                               preserveRatio="true">
                        <image>
                            <Image url="@../img/logo_cinetick.png" />
                        </image>
                    </ImageView>

                    <!-- Encabezado -->
                    <VBox alignment="CENTER" spacing="4">
                        <Label text="Bienvenido(a) de nuevo" styleClass="login-title-main"/>
                        <Label text="Inicia sesión para acceder a tus entradas."
                               styleClass="login-subtitle-main"
                               wrapText="true"/>
                    </VBox>

                    <!-- Formulario -->
                    <VBox spacing="16" fillWidth="true">

                        <VBox spacing="6">
                            <Label text="Usuario" styleClass="login-label"/>
                            <TextField fx:id="txtUsuario"
                                       promptText="Tu usuario"
                                       maxWidth="Infinity"
                                       styleClass="login-input"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="Contraseña" styleClass="login-label"/>
                            <PasswordField fx:id="txtContrasena"
                                           promptText="••••••••"
                                           maxWidth="Infinity"
                                           styleClass="login-input"/>
                        </VBox>

                        <!-- Error -->
                        <Label fx:id="lblMensaje"
                               text=""
                               visible="false"
                               managed="false"
                               wrapText="true"
                               styleClass="login-error"/>

                        <!-- Botón login -->
                        <Button fx:id="btnIniciarSesion"
                                text="Iniciar sesión"
                                maxWidth="Infinity"
                                styleClass="login-button"
                                onAction="#manejarInicioSesion"/>

                        <!-- Registro -->
                        <HBox alignment="CENTER" spacing="4">
                            <Label text="¿No tienes una cuenta?"/>
                            <Hyperlink fx:id="btnRegistrarse"
                                       text="Crear cuenta"
                                       onAction="#abrirRegistro"
                                       styleClass="login-link"/>
                        </HBox>

                    </VBox>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
